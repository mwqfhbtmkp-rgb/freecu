<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>FREECU â€” The Last City (Prototype)</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

<style>
  * {
    box-sizing: border-box;
    user-select: none;
    -webkit-user-select: none;
  }

  body {
    margin: 0;
    background: #020617;
    color: #e5e7eb;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  #game {
    width: 1000px;
    max-width: 100%;
    height: 260px;
    border: 1px solid #0f172a;
    background: #020617;
    position: relative;
    overflow: hidden;
    padding-left: 40px;
  }

  /* ENEMY */
  .enemy {
    width: 28px;
    height: 28px;
    background: #e5e7eb;
    position: absolute;
    left: -40px;
    bottom: 40px;
  }

  /* CITY */
  #city {
    position: absolute;
    right: 80px;
    bottom: 20px;
    width: 120px;
    height: 120px;
    border: 2px solid #334155;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
    font-size: 12px;
  }

  /* KING */
  #king {
    position: absolute;
    right: 220px;
    bottom: 30px;
    width: 40px;
    height: 80px;
    background: #22c55e;
    border-radius: 6px 6px 10px 10px;
  }

  #king::after {
    content: "";
    position: absolute;
    top: -14px;
    left: 8px;
    width: 24px;
    height: 14px;
    background: #22c55e;
    border-radius: 6px 6px 0 0;
  }

  /* OVERLAY */
  #overlay {
    position: absolute;
    inset: 0;
    background: rgba(2,6,23,0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    text-align: center;
  }

  #overlay.hidden {
    display: none;
  }
</style>
</head>

<body>

<div id="game">
  <div id="king"></div>
  <div id="city">CITY</div>
  <div id="overlay">Hold click or touch to begin</div>
</div>

<script>
  const game = document.getElementById("game");
  const overlay = document.getElementById("overlay");
  const city = document.getElementById("city");

  let enemies = [];
  let running = false;
  let spawnTimer = 0;

  function spawnEnemy() {
    const e = document.createElement("div");
    e.className = "enemy";
    e.x = -40;
    game.appendChild(e);
    enemies.push(e);
  }

  function start() {
    if (running) return;
    running = true;
    overlay.classList.add("hidden");
    requestAnimationFrame(loop);
  }

  function gameOver() {
    running = false;
    overlay.textContent = "The city has fallen";
    overlay.classList.remove("hidden");
  }

  function loop() {
    if (!running) return;

    spawnTimer++;
    if (spawnTimer > 120) {
      spawnEnemy();
      spawnTimer = 0;
    }

    enemies.forEach(e => {
      e.x += 1.2;
      e.style.left = e.x + "px";

      const cityRect = city.getBoundingClientRect();
      const enemyRect = e.getBoundingClientRect();

      if (enemyRect.right >= cityRect.left) {
        gameOver();
      }
    });

    enemies = enemies.filter(e => e.x < game.offsetWidth);

    requestAnimationFrame(loop);
  }

  game.addEventListener("pointerdown", (e) => {
    e.preventDefault();
    if (!running) {
      enemies.forEach(en => en.remove());
      enemies = [];
      spawnTimer = 0;
      start();
    }
  });
</script>

</body>
</html>